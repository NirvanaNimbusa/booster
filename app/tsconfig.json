{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2018",
    "skipLibCheck": true,
    "sourceRoot": "src",
    "sourceMap": true,
    "typeRoots": ["./typings", "node_modules/@types"]
  }
}
